@model IEnumerable<SafeFoods.Models.RecipeListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Recipe Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RecipeId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateAdded)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.RecipeId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateAdded)
        </td>
        <td>

            @Html.ActionLink("Details", "Details", new { id = item.RecipeId }) |
            @Html.ActionLink("See Nutrition", "Details","Nutrition", new { RecipeId = item.RecipeId },null)

        </td>
    </tr>
}

</table>
